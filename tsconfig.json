{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["ES2022"],
    "allowJs": false,
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "isolatedModules": true,
    "sourceMap": true,
    "baseUrl": "./src",
    "paths": {
      "app/*": ["app/*"],
      "infra/*": ["infra/*"],
      "middlewares/*": ["middlewares/*"],
      "models/*": ["models/*"],
      "shared/*": ["shared/*"],
      "types/*": ["types/*"],
      "utils/*": ["utils/*"]
    },
    "outDir": "./dist",
    "skipLibCheck": true
  },
  "include": ["src"]
}
